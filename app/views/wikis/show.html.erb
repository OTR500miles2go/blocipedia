<h1>
  <%= markdown(@wiki.title) %>
  <br />
</h1>

  <div class="container">
    <div class="jumbotron">
      <br /><p><%= markdown(@wiki.body) %></p>
      <small class="text-muted">
        Created: <%= @wiki.created_at.to_formatted_s(:short) %> By: <%= @wiki.user.username %>
      </small>
    </div>
  </div>

  <p>
    <strong>Collaborators: </strong>
    <%= render partial: 'collaborators/show' %>
  </p>

  <h2>
    <div class="col-md-4">
      <% if policy(@wiki).update? %>
        <%= link_to "UPDATE WIKI", edit_wiki_path(@wiki), class: 'btn btn-success' %>
      <% end %>
      <% if policy(@wiki).destroy? %>
        <%= link_to "DELETE WIKI", @wiki, method: :delete, class: 'btn btn-danger',
        data: {confirm: 'Are you sure you want to delete this wiki?'} %>
      <% end %>
    </div>  
  </h2>


