<div class="text-center">
  <h2>Sign up</h2>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= devise_error_messages! %>

    <div class="field">
      <br />
      <%= f.text_field :username, autofocus: true, placeholder: :username %>
    </div>
    
    <div class="field">
      <br />
      <%= f.email_field :email, autocomplete: "email", placeholder: :email %>
    </div>

    <div class="field">
      <br />
      <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %> characters minimum)</em>
      <% end %><br />
      <%= f.password_field :password, autocomplete: "off", placeholder: :password %>
    </div>

    <div class="field">
      <br />
      <%= f.password_field :password_confirmation, autocomplete: "off", placeholder: :password_confirmation %>
    </div>

    <div class="actions">
      <%= f.submit "Sign up" %>
    </div>
  <% end %>

  <br /><%= render "devise/shared/links" %>
</div>